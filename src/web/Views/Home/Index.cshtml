@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<SiteEditViewModel >
<style>
    .panel-body {
        padding-bottom:0;
        padding-top:0;
    }
    .show-grid {
        margin-bottom: 0;
        height:43px;
    }
    .show-grid [class^="col-"]:first-child {
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .show-grid [class^="col-"] {
        background-color: #eee;
        background-color: rgba(86,61,124,.15);
        border: 1px solid #ddd;
        border: 1px solid rgba(86,61,124,.2);
        height: inherit;
    }
    .panel-group {
        margin-bottom: 8px;
    }
    .panel-group:last-child {
        margin-bottom:0;
    }
    .my-col-justified {
        padding: 0;
    }
    .my-col-justified > button {
        padding: 0;
        border: 0;
        height: 100%;
        width: 100%;
    }
</style>
<div class="panel panel-primary">
    @*<div class="panel-heading">
        <h3 class="panel-title">百度</h3>
    </div>*@
    <div class="panel-body">
        <div class="panel-group">
            <div class="row">
                <button type="button" class="btn btn-primary btn-block" onclick="window.location.href = '/Site/AddSite';">新增</button>
            </div>
            @foreach (var m in Model)
            {
                <div class="row show-grid">
                    <div class="col-xs-8"><a href="@m.Site">@m.WebName</a></div>
                    <div class="col-xs-2 my-col-justified">
                        <button type="button" class="btn btn-link btn4edit">Edit</button>
                    </div>
                    <div class="col-xs-2 my-col-justified">
                        <button type="button" class="btn btn-link">Copy</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>





