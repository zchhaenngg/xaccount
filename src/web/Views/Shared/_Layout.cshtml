<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <style>
        .my-navbar-on .my-navbar-label {
            color: #09BB07;
        }
        .my-navbar-label {
            margin-bottom: 0;
        }
    </style>
</head>
<body style="background-color:#fff">
    @RenderBody()
    <!--网站、我-->
    <nav class="navbar navbar-default navbar-fixed-bottom my-navbar">
        <div class="btn-group btn-group-justified" role="group">
            <div class="btn-group my-navbar-item my-navbar-on" role="group">
                <button type="button" class="btn" style="padding:5px 0 0;border:0;border-radius: 0;" data-redirect="/home/index">
                    <img src="~/Images/icon_tabbar.png" style="width: 27px; height: 27px;"/>
                    <p class="my-navbar-label" style="height:20px;">网站</p>
                </button>
            </div>
            <div class="btn-group my-navbar-item" role="group">
                <button type="button" class="btn" style="padding:5px 0 0;border:0;border-radius: 0;" data-redirect="/account/index">
                    <img src="~/Images/icon_tabbar.png" style="width: 27px; height: 27px;" />
                    <p class="my-navbar-label" style="height:20px;">我</p>
                </button>
            </div>
        </div>
    </nav>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('.my-navbar-item').on('click', function () {
            
            $(this).addClass('my-navbar-on').siblings('.my-navbar-on').removeClass('my-navbar-on');

            window.location.href = $(this).find("button").data("redirect");
        });
    </script>
</body>
</html>
